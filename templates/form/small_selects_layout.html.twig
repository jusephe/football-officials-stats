{% use 'bootstrap_4_horizontal_layout.html.twig' %}

{% block choice_widget_collapsed %}
    {%- set attr = attr|merge({class: (attr.class|default('') ~ ' form-control-sm')|trim}) -%}
    {{- parent() -}}
{% endblock %}

{% block form_label %}
    {%- set label_attr = label_attr|merge({class: (label_attr.class|default('') ~ ' col-form-label-sm')|trim}) -%}
    {{- parent() -}}
{% endblock %}
