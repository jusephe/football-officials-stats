{% extends 'admin/base.html.twig' %}

{% block css %}<link rel="stylesheet" type="text/css" href="{{ asset('styles/admin/form.css') }}">{% endblock %}

{% block title %}Rozhodčí PFS - Tresty{% endblock %}

{% block heading %}Tresty{% endblock %}

{% block main %}

    <p>
        Tresty od Disciplinární komise jsou k&nbsp;nalezení
        <a href="https://facr.fotbal.cz/uredni-deska-rozhodnuti?officialBoardFilter-subject-id=251" target="_blank">na této stránce</a>.
    </p>
    <p>
        Zvolte soutěž, sezónu a kolo. Poté z&nbsp;vypsaných zápasů vyberte ten, kterého se trest týká.
    </p>

    <div class="mb-4">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <input type="submit" class="btn btn-primary" value="Zobrazit"/>
        {{ form_end(form) }}
    </div>

    <ul class="list-group">
        {% for game in games %}
            <li>
                <a href="{{ path('add_punishments', {'gameId': game.id}) }}" class="list-group-item list-group-item-action text-primary">
                    {{ game.homeTeam.shortName }} - {{ game.awayTeam.shortName }}
                </a>
            </li>
        {% endfor %}
    </ul>

{% endblock %}
