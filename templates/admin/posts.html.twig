{% extends 'admin/base.html.twig' %}

{% set page_title = 'Novinky' %}

{% block heading %}{{ page_title }}{% endblock %}

{% block main %}

    <a href="{{ path('create_post') }}" role="button" class="btn btn-primary mb-4">+ Přidat novinku</a>

    <div class="table-responsive">
        <table class="table">
            <thead class="thead-light">
            <tr>
                <th scope="col">Nadpis</th>
                <th scope="col">Zveřejněno</th>
                <th scope="col"></th>
                <th scope="col" style="width: 5em;"></th>
            </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <td class="align-middle">{{ post.title }}</td>
                    <td class="align-middle">{{ post.published|date("j. n. Y") }}</td>
                    <td class="text-right">
                        <a href="{{ path('edit_post', {'id': post.id}) }}" role="button" class="btn btn-sm btn-primary">
                            Editovat
                        </a>
                    </td>
                    <td class="text-right">
                        {{ include('admin/_delete_post.html.twig', {post: post}, with_context = false) }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
