{% extends 'site/base.html.twig' %}

{% block css %}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css">
{% endblock %}

{% set seasonEndYear = (season+1)|slice(2, 2) %}

{% set page_title = league ~ ' ' ~ season ~ '/' ~ seasonEndYear %}
{% if part is not null %}
    {% set page_title = page_title ~ ' – ' ~ part|capitalize %}
{% endif %}

{% block heading %}{{ page_title }}{% endblock %}

{% block main %}

    <h2 class="h4 mb-3 h-underline">Zápasy</h2>

    {{ include('site/season_stats/referee_matches.html.twig') }}

    {{ include('site/season_stats/ar1_matches.html.twig') }}

    {{ include('site/season_stats/ar2_matches.html.twig') }}

    {{ include('site/season_stats/ar1_and_ar2_matches.html.twig') }}

    {{ include('site/season_stats/official_matches.html.twig') }}

    <h2 class="h4 mb-3 h-underline">Karty</h2>

    {{ include('site/season_stats/referee_yellow.html.twig') }}

    {{ include('site/season_stats/referee_yellow_avg.html.twig') }}

    {{ include('site/season_stats/referee_yellow_first.html.twig') }}

    {{ include('site/season_stats/referee_red.html.twig') }}

    {{ include('site/season_stats/referee_red_avg.html.twig') }}

    {{ include('site/season_stats/referee_red_offence.html.twig') }}

    {{ include('site/season_stats/red_cards_punishments.html.twig') }}

    <h2 class="h4 mb-3 h-underline">Interakce</h2>

    {{ include('site/season_stats/referee_ar.html.twig') }}

    {{ include('site/season_stats/official_official.html.twig') }}

    {{ include('site/season_stats/referee_assessor.html.twig') }}

    {{ include('site/season_stats/official_assessor.html.twig') }}

    {{ include('site/season_stats/official_team.html.twig') }}

    {{ include('site/season_stats/official_home_team.html.twig') }}

    <h2 class="h4 mb-3 h-underline">Delegáti</h2>

    {{ include('site/season_stats/assessor_matches.html.twig') }}

    {{ include('site/season_stats/assessor_yellow.html.twig') }}

    {{ include('site/season_stats/assessor_yellow_avg.html.twig') }}

    {{ include('site/season_stats/assessor_red.html.twig') }}

    {{ include('site/season_stats/assessor_red_avg.html.twig') }}

    {{ include('site/season_stats/assessor_team.html.twig') }}

{% endblock %}

{% block scripts %}
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
    <script src="{{ asset('scripts/site/season_datatables.js') }}"></script>
    <script src="https://www.gstatic.com/charts/loader.js"></script>
    <script>
        {{ gc_draw(redOffenceChart, 'red_offence_chart') }}
        $(document).ready(function() {
            $('#red_offence_chart').collapse('hide')
        } );
    </script>
{% endblock %}
