{% extends 'site/base.html.twig' %}

{% set page_title = league %}

{% block heading %}{{ page_title }}{% endblock %}

{% block main %}

    <div class="table-responsive">
        <table class="table">
            <tbody>
            {% for season in seasons %}
                {% set seasonEndYear = (season.season+1)|slice(2, 2) %}
                <tr>
                    <td class="font-weight-bold" style="width: 6em">
                        {{ season.season }}/{{ seasonEndYear }}
                    </td>
                    <td style="width: 7.8em">
                        <a href="{{ path('season_stats', {'league': slug, 'season': season.season}) }}">Celá sezóna</a>
                    </td>
                    <td style="width: 5.2em">
                        {% if season.autumn == true %}
                            <a href="{{ path('season_stats', {'league': slug, 'season': season.season, 'part': 'podzim'}) }}">Podzim</a>
                        {% endif %}
                    </td>
                    <td>
                        {% if season.spring == true %}
                            <a href="{{ path('season_stats', {'league': slug, 'season': season.season, 'part': 'jaro'}) }}">Jaro</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
