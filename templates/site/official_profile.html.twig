        </div>
    </div>

    {{ include('site/official_stats/nomination_lists.html.twig') }}

    <h2 class="h4 mb-3 pt-3 stats-subheading">Zápasy</h2>

    {{ include('site/official_stats/referee_matches.html.twig') }}

    {{ include('site/official_stats/ar1_matches.html.twig') }}

    {{ include('site/official_stats/ar2_matches.html.twig') }}

    {{ include('site/official_stats/ar1_and_ar2_matches.html.twig') }}

    {{ include('site/official_stats/official_matches.html.twig') }}

    <h2 class="h4 mb-3 pt-3 stats-subheading">Karty</h2>

    {{ include('site/official_stats/referee_yellow.html.twig') }}

    {{ include('site/official_stats/referee_yellow_avg.html.twig') }}

    {{ include('site/official_stats/referee_yellow_first.html.twig') }}

    {{ include('site/official_stats/referee_red.html.twig') }}

    {{ include('site/official_stats/referee_red_avg.html.twig') }}

    {{ include('site/official_stats/referee_red_offence.html.twig') }}

    {{ include('site/official_stats/referee_cards_minutes.html.twig') }}

    <h2 class="h4 mb-3 pt-3 stats-subheading">Interakce</h2>

    {{ include('site/official_stats/referee_ar.html.twig') }}

    {{ include('site/official_stats/official_official.html.twig') }}

    {{ include('site/official_stats/referee_assessor.html.twig') }}

    {{ include('site/official_stats/official_assessor.html.twig') }}

    {{ include('site/official_stats/official_team.html.twig') }}

    {{ include('site/official_stats/official_home_team.html.twig') }}

{% endblock %}

{% block scripts %}
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
    <script src="{{ asset('scripts/site/profile.js') }}"></script>
    <script src="https://www.gstatic.com/charts/loader.js"></script>
    <script>
        {{ gc_draw([redOffenceChart, cardsMinutesChart], ['red_offence_chart', 'cards_minutes_chart']) }}
    </script>
    <script src="{{ asset('scripts/site/official_profile.js') }}"></script>
{% endblock %}
