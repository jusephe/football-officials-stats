{% extends 'site/base.html.twig' %}

{% block css %}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css">
{% endblock %}

{% set page_title = assessor.name %}

{% block heading %}{{ page_title }}{% endblock %}

{% block loading %}
    <div class="loading loading-transparent full-width">
        <div class="loading-align">
            <div class="loading-animation"></div>
            <div>Načítání statistik...</div>
        </div>
    </div>
{% endblock %}

{% block main %}

    <button id="show_hide" type="button" class="btn btn-outline-dark btn-sm mb-3">Rozbalit/sbalit vše</button>

    {{ include('site/official_stats/assessor_matches.html.twig') }}

    {{ include('site/official_stats/assessor_yellow.html.twig') }}

    {{ include('site/official_stats/assessor_yellow_avg.html.twig') }}

    {{ include('site/official_stats/assessor_red.html.twig') }}

    {{ include('site/official_stats/assessor_red_avg.html.twig') }}

    {{ include('site/official_stats/assessor_team.html.twig') }}

{% endblock %}

{% block scripts %}
    {{ encore_entry_script_tags('site_profile') }}
    {{ encore_entry_script_tags('site_assessor_profile') }}
{% endblock %}
