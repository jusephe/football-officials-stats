{% extends 'site/season_stats/base.html.twig' %}

{% set statTableClass = 'stat-table-3cols' %}

{% block title %}Zápasy hlavního rozhodčího s konkrétním asistentem{% endblock %}

{% block head %}
    <th scope="col">Rozhodčí</th>
    <th scope="col">Asistent</th>
    <th scope="col">Počet</th>
{% endblock %}

{% block body %}
    {% for stat in stats.RefereeAr %}
        <tr>
            <td>{{ stat.referee_name }}</td>
            <td>{{ stat.ar_name }}</td>
            <td>{{ stat.number_of_matches }}</td>
        </tr>
    {% endfor %}
{% endblock %}
