{% extends 'site/season_stats/base.html.twig' %}

{% set statTableClass = 'stat-table-3cols' %}

{% block title %}Zápasy rozhodčího (v jakékoliv roli) na domácím hřišti týmu{% endblock %}

{% block head %}
    <th scope="col">Rozhodčí</th>
    <th scope="col">Tým</th>
    <th scope="col">Počet</th>
{% endblock %}

{% block body %}
    {% for stat in stats.OfficialHomeTeam %}
        <tr>
            <td>{{ stat.official_name }}</td>
            <td>{{ stat.team_name }}</td>
            <td>{{ stat.number_of_matches }}</td>
        </tr>
    {% endfor %}
{% endblock %}
