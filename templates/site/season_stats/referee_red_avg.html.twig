{% extends 'site/season_stats/base.html.twig' %}

{% set statTableClass = 'stat-table' %}

{% block div_id 'RefereeRedAvg' %}

{% block title %}Průměrný počet červených karet na jedno utkání{% endblock %}

{% block head %}
    <th scope="col">Rozhodčí</th>
    <th scope="col">Průměr</th>
{% endblock %}

{% block body %}
    {% for stat in stats.RefereeRedAvg %}
        <tr>
            <td>{{ stat.name }}</td>
            <td>{{ stat.cards_avg|number_format(2) }}</td>
        </tr>
    {% endfor %}
{% endblock %}
