{% extends 'site/season_stats/base.html.twig' %}

{% set statTableClass = 'stat-table' %}

{% block div_id 'RefereeRed' %}

{% block title %}Počet udělených červených karet{% endblock %}

{% block head %}
    <th scope="col">Rozhodčí</th>
    <th scope="col">Počet</th>
{% endblock %}

{% block body %}
    {% for stat in stats.RefereeRed %}
        <tr>
            <td>{{ stat.name }}</td>
            <td>{{ stat.number_of_cards }}</td>
        </tr>
    {% endfor %}
{% endblock %}
