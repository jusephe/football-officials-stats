{% extends 'site/season_stats/base.html.twig' %}

{% set statTableClass = 'stat-table-3cols' %}

{% block div_id 'OfficialAssessor' %}

{% block title %}Zápasy rozhodčího (v jakékoliv roli) s konkrétním delegátem{% endblock %}

{% block head %}
    <th scope="col">Rozhodčí</th>
    <th scope="col">Delegát</th>
    <th scope="col">Počet</th>
{% endblock %}

{% block body %}
    {% for stat in stats.OfficialAssessor %}
        <tr>
            <td>{{ stat.official_name }}</td>
            <td>{{ stat.assessor_name }}</td>
            <td>{{ stat.number_of_matches }}</td>
        </tr>
    {% endfor %}
{% endblock %}
