{% extends 'site/season_stats/base.html.twig' %}

{% set statTableClass = 'stat-table' %}

{% block title %}Zápasy v roli hlavního rozhodčího{% endblock %}

{% block head %}
    <th scope="col">Rozhodčí</th>
    <th scope="col">Počet</th>
{% endblock %}

{% block body %}
    {% for stat in stats.RefereeMatches %}
        <tr>
            <td>{{ stat.name }}</td>
            <td>{{ stat.number_of_matches }}</td>
        </tr>
    {% endfor %}
{% endblock %}
